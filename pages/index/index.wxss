/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f6f6f6;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  height: 100%;
}

.status-text {
  margin: 50rpx 0;
  padding: 20rpx 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.button-group {
  width: 100%;
  margin: 30rpx 0;
}

.button-group button {
  margin: 20rpx 0;
  width: 100%;
}

.description {
  margin-top: 50rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.description text {
  display: block;
  margin: 10rpx 0;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.description text:first-child {
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}